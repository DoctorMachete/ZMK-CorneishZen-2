#include "keycodes.h"

repeat_macro: repeat_macro {
    label = "repeat_macro";
    compatible = "zmk,behavior-macro";
    #binding-cells = <0>;
    bindings
        = <&macro_tap  &key_repeat>
        ;
};
macro_accent: macro_accent {                    //  ` â†’ ^ (with shift)
    label = "macro_accent";
    compatible = "zmk,behavior-macro";
    #binding-cells = <0>;
    bindings
        = <&macro_tap &kp LEFT_BRACKET &kp SPACE>
        ;
};
macro_acute: macro_acute {                    //  ^ (with shift)
    label = "macro_acute";
